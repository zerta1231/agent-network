
// Connect to peer (manual connection)
else if (req.url === '/api/connect' && req.method === 'POST') {
  let body = '';
  req.on('data', chunk => body += chunk);
  req.on('end', async () => {
    const { host, port } = JSON.parse(body);
    try {
      await this.p2p.connect(`${host}:${port}`);
      sendSuccess({ success: true, message: `Connected to ${host}:${port}` });
    } catch(e) {
      sendError(e.message);
    }
  });
}
